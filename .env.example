# ===========================================
# EchoSenseiX Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================================
# REQUIRED CONFIGURATION
# ===========================================

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/echosensei
DATABASE_SSL=false
DATABASE_MAX_CONNECTIONS=20

# MongoDB Configuration (Optional - for additional data storage)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=yourapp

# Security Keys (REQUIRED - Generate secure random strings)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-session-secret-minimum-32-characters-required
ENCRYPTION_KEY=your-encryption-key-minimum-32-characters-required

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Environment
NODE_ENV=development

# Server Settings
HOST=0.0.0.0
PORT=5000
PUBLIC_URL=http://localhost:5000

# Domain Configuration (for white-label/subdomain support)
BASE_DOMAIN=

# Security
TRUST_PROXY=false

# ===========================================
# STORAGE CONFIGURATION
# ===========================================

# Storage Provider: local, s3, gcs, or azure
STORAGE_PROVIDER=local

# Local Storage (if STORAGE_PROVIDER=local)
UPLOAD_DIR=uploads
AUDIO_DIR=audio-storage

# AWS S3 Configuration (if STORAGE_PROVIDER=s3)
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Google Cloud Storage (if STORAGE_PROVIDER=gcs)
GCS_BUCKET=
GCS_PROJECT_ID=
GCS_KEY_FILE_PATH=

# Azure Blob Storage (if STORAGE_PROVIDER=azure)
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONTAINER_NAME=

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================

# ElevenLabs API
ELEVENLABS_API_KEY=

# OpenAI API (for AI features)
OPENAI_API_KEY=

# Stripe Payment Processing
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# SendGrid Email Service
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Google Cloud Services
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_MAX_AGE=604800000

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Debug Mode
DEBUG=false

# Mock External Services
MOCK_ELEVENLABS=false
MOCK_STRIPE=false

# ===========================================
# NOTES
# ===========================================
# 
# Required for production:
# - DATABASE_URL
# - SESSION_SECRET (min 32 chars)
# - ENCRYPTION_KEY (min 32 chars)
# - STORAGE_PROVIDER configuration
#
# Recommended for production:
# - ELEVENLABS_API_KEY (for voice AI features)
# - STRIPE_SECRET_KEY (for payments)
# - SENDGRID_API_KEY (for emails)
#
# Security best practices:
# - Use strong, unique values for secrets
# - Never commit .env to version control
# - Rotate secrets regularly
# - Use different values for dev/staging/prod
#
